{
  "name": "lsos",
  "version": "0.1.0",
  "dependencies": {
    "find-up": "^5.0.0"
  },
  "main": "dist/verify.js",
  "bin": {
    "lsos": "dist/cli/index.js"
  },
  "types": "dist/verify.d.ts",
  "scripts": {
    "dev": "yarn build:prepare && yarn build:dev",
    "prod": "yarn build:prepare && yarn build:prod",
    "build:dev": "tsc --watch",
    "build:prod": "tsc",
    "build:prepare": "yarn build:clean && yarn build:permissions",
    "build:clean": "rm -rf dist/",
    "build:permissions": "(mkdir -p dist/cli/ && mkdir -p dist/postinstall/ && touch dist/cli/index.js dist/postinstall/index.js && chmod 775 dist/cli/index.js dist/postinstall/index.js)",
    "postinstall": "node -e \"try{require('./dist/postinstall/index.js')}catch(err){console.log('====== Warning ======');console.log(err);}\"",
    "prepublishOnly": "yarn prod"
  },
  "devDependencies": {
    "@types/node": "^14.14.6",
    "typescript": "^4.0.2"
  },
  "files": [
    "/dist/",
    "/src/"
  ],
  "repository": "github:lsos/lsos",
  "publishConfig": {
    "access": "public"
  }
}
